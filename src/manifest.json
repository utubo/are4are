{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "4.1",
	"default_locale": "ja",

	"icons": {
		"32": "icons/are4are-32.png"
	},

	"applications": {
		"gecko": {
			"id": "are@utb.dip.jp",
			"strict_min_version": "48.0a1"
		}
	},

	"content_scripts": [
		{
			"matches": ["http://*.2chan.net/*/futaba.php?mode=cat*"],
			"js": ["common/jquery-2.2.3.min.js", "common/util.js", "content_scripts/catalog.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["common/jquery-2.2.3.min.js", "common/util.js", "content_scripts/thread.js"],
			"run_at": "document_end"
		}
	],

	"options_ui": { "page": "common/options.html" },

	"web_accessible_resources": [
		"content_scripts/thread.css",
		"content_scripts/catalog.css",
		"common/util.css",
		"common/options.html"
	],

	"permissions": [
		"storage",
		"tabs"
	]
}

